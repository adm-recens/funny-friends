{
  "name": "@funny-friends/root",
  "version": "2.0.0",
  "description": "Funny Friends - A platform where friends gather to play card games",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run db:generate && turbo run dev",
    "dev:platform": "turbo run dev --filter=@funny-friends/platform",
    "dev:teen-patti": "turbo run dev --filter=@funny-friends/teen-patti",
    "dev:rummy": "turbo run dev --filter=@funny-friends/rummy",
    "build": "npm run db:generate && turbo run build",
    "build:platform": "npm run db:generate && turbo run build --filter=@funny-friends/platform",
    "build:games": "turbo run build --filter='@funny-friends/*' --filter=!@funny-friends/platform",
    "start": "cd packages/platform/server && npm start",
    "lint": "turbo run lint",
    "db:push": "cd packages/platform/server && npx prisma db push",
    "db:generate": "cd packages/platform/server && npx prisma generate",
    "db:studio": "cd packages/platform/server && npx prisma studio",
    "clean": "turbo run clean && rm -rf node_modules",
    "render-build": "npm install && npm run build:platform",
    "postinstall": "npm run db:generate"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "games",
    "teen-patti",
    "rummy",
    "cards",
    "multiplayer",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "turbo": "^2.0.0"
  }
}
