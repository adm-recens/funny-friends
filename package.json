{
  "name": "@funny-friends/root",
  "version": "2.0.0",
  "description": "Funny Friends - A platform where friends gather to play card games",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run db:generate && turbo run dev",
    "build": "npm run db:generate && npm run db:push && npm run db:seed && npm run build:client",
    "build:client": "cd packages/platform/client && npx vite@7.2.4 build",
    "start": "cd packages/platform/server && node server.js",
    "postinstall": "npm run db:generate",
    "lint": "turbo run lint",
    "db:push": "cd packages/platform/server && npx prisma db push",
    "db:generate": "cd packages/platform/server && npx prisma generate",
    "db:seed": "cd packages/platform/server && node scripts/seed-games.js",
    "db:studio": "cd packages/platform/server && npx prisma studio",
    "clean": "rm -rf node_modules"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "games",
    "teen-patti",
    "rummy",
    "cards",
    "multiplayer",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "prisma": "^6.2.1",
    "vite": "^7.2.4",
    "@vitejs/plugin-react": "^5.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "lucide-react": "^0.554.0",
    "socket.io-client": "^4.8.1",
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "resolutions": {
    "@prisma/client": "^6.2.1",
    "prisma": "^6.2.1"
  }
}
